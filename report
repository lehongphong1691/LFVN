    // Chart 6: Keyword Performance
    const keywordCtx = document.getElementById('keywordChart').getContext('2d');
    const keywordData = [
        { group: 'Vay Bảo Hiểm Nhân Thọ', cost: 2.68 },
        { group: 'Vay Lotte Finance', cost: 9.33 },
        { group: 'Vay Theo Lương', cost: 10.04 },
        { group: 'Lotte Finance', cost: 13.30 },
        { group: 'Ngân hàng Lotte Finance', cost: 13.82 },
        { group: 'Vay Tín Chấp', cost: 19.74 },
        { group: 'Công Ty Tài Chính', cost: 25.61 }
    ].sort((a,b) => b.cost - a.cost);

    new Chart(keywordCtx, {
        type: 'bar',
        data: {
            labels: keywordData.map(d => wrapLabel(d.group)),
            datasets: [{
                label: '% Cost/Disbursement',
                data: keywordData.map(d => d.cost),
                backgroundColor: colors.blue,
                borderColor: colors.blue_border,
            }]
        },
        options: {...defaultOptions, indexAxis: 'y' }
    });
    
    // Chart 7: Audience Performance
    const audienceCtx = document.getElementById('audienceChart').getContext('2d');
    const audienceLabels = [
        wrapLabel('Retargeting'),
        wrapLabel('Audience based on past performance_Female'),
        wrapLabel('Audience based on past performance'),
        wrapLabel('Audience based on past + Normal TA'),
    ];
    new Chart(audienceCtx, {
        type: 'polarArea',
        data: {
            labels: audienceLabels,
            datasets: [{
                label: '% Cost/Disbursement',
                data: [13.73, 22.05, 24.27, 33.69],
                backgroundColor: [colors.green, colors.blue, colors.orange, colors.red]
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
             plugins: {
                legend: {
                    position: 'bottom',
                    labels: {
                        boxWidth: 20,
                        padding: 20,
                    }
                },
                 tooltip: {
                    callbacks: {
                        title: tooltipTitleCallback,
                        label: function(context) {
                            return `${context.dataset.label}: ${context.raw}%`;
                        }
                    }
                }
             },
             scale: {
                ticks: {
