<script>
    const tooltipTitleCallback = (tooltipItems) => {
        const item = tooltipItems[0];
        let label = item.chart.data.labels[item.dataIndex];
        if (Array.isArray(label)) {
            return label.join(' ');
        }
        return label;
    };

    const wrapLabel = (label) => {
        const maxLength = 16;
        if (label.length <= maxLength) return label;
        const words = label.split(' ');
        let lines = [];
        let currentLine = '';
        words.forEach(word => {
            if ((currentLine + word).length > maxLength) {
                lines.push(currentLine.trim());
                currentLine = '';
            }
            currentLine += word + ' ';
        });
        lines.push(currentLine.trim());
        return lines.filter(line => line.length > 0);
    };

    const colors = {
        red: 'rgba(229, 46, 45, 0.8)',
        blue: 'rgba(0, 82, 160, 0.8)',
        orange: 'rgba(247, 148, 29, 0.8)',
        green: 'rgba(40, 167, 69, 0.8)',
        darkGray: 'rgba(54, 62, 70, 0.8)',
        
        red_border: 'rgb(229, 46, 45)',
        blue_border: 'rgb(0, 82, 160)',
        orange_border: 'rgb(247, 148, 29)',
        green_border: 'rgb(40, 167, 69)',
        darkGray_border: 'rgb(54, 62, 70)',
    };
    
    const defaultOptions = {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
            legend: {
                position: 'top',
            },
            tooltip: {
                callbacks: {
                    title: tooltipTitleCallback
                }
            }
        },
        scales: {
            x: {
                grid: {
                    display: false
                }
            },
            y: {
                beginAtZero: true,
                grid: {
                    color: '#e9e9e9',
                    borderDash: [2, 5],
                }
            }
        }
    };

    // Chart 1: Overall Performance
    const overallCtx = document.getElementById('overallChart').getContext('2d');
    new Chart(overallCtx, {
        type: 'bar',
        data: {
            labels: ['Budget', 'Leads', 'Qualified Leads', 'Disbursement'],
            datasets: [{
                label: 'Plan',
                data: [2637579241, 50567, 28790, 8792],
                 backgroundColor: colors.darkGray,
                borderColor: colors.darkGray_border,
                borderWidth: 1
            }, {
                label: 'Actual',
                data: [2637579241, 50073, 31093, 11962],
                backgroundColor: colors.red,
                borderColor: colors.red_border,
                borderWidth: 1
            }]
        },
        options: { ...defaultOptions,
             scales: {
                x: {},
                y: {
                    type: 'logarithmic',
                    beginAtZero: true,
                    ticks: {
                       callback: function(value, index, values) {
                            if (value === 1000000000) return '1B';
                            if (value === 1000000) return '1M';
                            if (value === 100000) return '100K';
                            if (value === 10000) return '10K';
                            return null;
                        }
                    }
                }
            }
        }
    });

    // Chart 2: Monthly Performance
    const monthlyCtx = document.getElementById('monthlyChart').getContext('2d');
    new Chart(monthlyCtx, {
        type: 'bar',
        data: {
            labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May'],
            datasets: [
                {
                    type: 'bar',
                    label: 'Budget (VND)',
                    data: [136904916, 293729681, 586531566, 779771177, 840641901],
                    backgroundColor: colors.red,
                    yAxisID: 'y',
                },
                {
                    type: 'line',
                    label: 'CPL (VND)',
                    data: [52494, 59244, 50725, 47818, 57433],
                    borderColor: colors.blue_border,
                    backgroundColor: 'transparent',
                    yAxisID: 'y1',
                    tension: 0.2
                },
                {
                    type: 'line',
                    label: 'CPQL (VND)',
                    data: [85512, 88821, 79015, 79585, 93780],
                    borderColor: colors.orange_border,
                    backgroundColor: 'transparent',
                    yAxisID: 'y1',
                    tension: 0.2
                },
                 {
                    type: 'line',
                    label: '% Cost/Disbursement',
                    data: [23.73, 13.23, 18.21, 22.66, 33.60],
                    borderColor: colors.green_border,
                    backgroundColor: 'transparent',
                    borderDash: [5, 5],
                    yAxisID: 'y2',
                    tension: 0.2
                }
            ]
        },
        options: {
            ...defaultOptions,
            scales: {
                x: { grid: { display: false }},
                y: {
                    type: 'linear',
                    display: true,
                    position: 'left',
                    title: { display: true, text: 'Budget (VND)'}
                },
                y1: {
                    type: 'linear',
                    display: true,
                    position: 'right',
                    grid: { drawOnChartArea: false },
                    title: { display: true, text: 'Cost per Lead (VND)'}
                },
                y2: {
                    type: 'linear',
                    display: false,
                    position: 'right',
                     title: { display: true, text: '%'}
                }
            }
        }
    });

    // Chart 3: Channel Performance
    const channelCtx = document.getElementById('channelChart').getContext('2d');
    new Chart(channelCtx, {
        type: 'bar',
        data: {
            labels: ['SEM', 'GDE', 'GPM'],
            datasets: [
                {
